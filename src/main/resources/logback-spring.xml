<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <springProperty name="snsArn" source="logging.sns.arn" defaultValue=""/>
    <springProperty name="snsRegion" source="logging.sns.region" defaultValue=""/>
    <springProperty name="maxMessageLength" source="logging.sns.max-message-length" defaultValue=""/>
    <appender name="SNS" class="org.jahanzaib.personalsite.config.AwsLogAppender">
        <topicArn>${snsArn}</topicArn>
        <snsRegion>${snsRegion}</snsRegion>
        <maxMessageLength>${maxMessageLength}</maxMessageLength>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="SNS" />
    </root>
</configuration>
